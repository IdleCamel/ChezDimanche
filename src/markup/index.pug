doctype html
html.no-js(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Gite et Couvert chez Dimanche
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Pacifico')
    link(rel='stylesheet', href='css/jquery-ui.min.css')
    link(rel='stylesheet', href='css/app.css')
    include helper/mixins

  body

    //-  HEADER
    //- ========
    header
      include partials/nav

      .text-box
        h1
          span.brand-name!=Header.title
          span.slogan!=Header.subtitle

      button.lightbox-open Voir les photos

      //- TODO: make a mixin(color)
      include social_media_icons



    main

      include partials/accommodation
      section#accommodation
        h2 Le Gite

        #essential
          h3 L'essentiel
          +descriptionList(Essential)

        #photoGallery
          h3 Galerie photos
          div.img-container
            img.lightbox-open(
              src="img/garden1.jpg"
              alt="Jardin privatif")
          div.center-btn
            button.lightbox-open Voir les photos



        h3 Description



      section#pricing
        h2 Tarifs
        +pricing

      section#google-map
        h2 Plan
        include partials/googleMap

      section#testimonials
        h2 Vos commentaires
        each item in Reviews
          +review(item)
        +btn-center(
          "testimonialsBtn",
          "Voir les commentaires plus anciens")
        +btn-center(
          "testimonialsBtn",
          "Laisser un commentaire")
        include partials/testimonials

      section#about
        h2 Ã€ propos
        div.pic-joelle
          img(src="img/joelle.jpg", alt="")
        div.text-box
          - var paragraphs = about["paragraphs"];
          each item in paragraphs
            p=item
      
    footer#contact
      address
        ul
          li!=Contact.post_address
          li=Contact.mob_phone
          li=Contact.landline
          li=Contact.email
      include partials/social_media_icons


    // build:js js/bundle.js
    script(src='../bower_components/jquery/dist/jquery.min.js')
    script(src='../bower_components/jquery-ui/jquery-ui.min.js')
    script(src='../bower_components/foundation-sites/dist/foundation.min.js')
    script(src='../js/modules/admin-input.js')
    script(src='../js/app.js')
    // endbuild
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDEds1gCBcG31dnUyP2O0hkwhbUVQ78BvA&callback=initMap', async, defer)